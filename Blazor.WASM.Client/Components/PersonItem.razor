<MudCard Style="width: 30%; min-width: 270px; margin: 16px; transition: all 2s;">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">@Person.Name.First[0]</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Class="truncate" Typo="Typo.body1">@Person.Name.First @Person.Name.Last</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="NavigateToPerson"/>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardMedia Image="@Person.Picture.Large" Height="100"/>
    <MudCardContent>
        <MudText Class="truncate" Typo="Typo.body2">@Person.Email</MudText>
        <MudText Class="truncate" Typo="Typo.body2">@Person.Phone</MudText>
    </MudCardContent>
</MudCard>